<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <File name="errorLogFile" fileName="logs/errors.log" >
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>

        </File>
        <File name="infoLogFile" fileName="logs/info.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>

        </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef level="error" ref="errorLogFile" />
            <AppenderRef level="info" ref="infoLogFile" />
        </Root>
    </Loggers>
</Configuration>