<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <File name="errorLogFile" fileName="logs/errors.log" >
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Filters>
                <ThresholdFilter level="FATAL" onMatch="DENY" onMismatch="ACCEPT" />
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY" />

            </Filters>

        </File>
        <File name="infoLogFile" fileName="logs/info.log">

            <Filters>
                <ThresholdFilter level="WARN" onMatch="DENY" onMismatch="ACCEPT" />
                <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY" />
            </Filters>


            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>

        </File>
    </Appenders>
    <Loggers>
        <Root level="TRACE">
            <AppenderRef level="INFO" ref="infoLogFile" />
            <AppenderRef level="ERROR" ref="errorLogFile" />

        </Root>
    </Loggers>
</Configuration>